<!DOCTYPE html
     PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <title>eXPlainPMT &raquo; Please Log In</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />
    <style type="text/css">
      #Login {
        text-align: left;
        position: relative;
        width: 400px;
        margin: 10% auto 0 auto;
        padding: 10px;
        color: #333333;
        background-color: white;
        border: 10px solid #666666;
      }

      #Login.login_error {
        border-color: #CC0000;
      }

      h1 {
        font-size: 20px;
      }
    </style>
  </head>
  <body>
    <div id="Login" <%= 'class="login_error"' if @flash['error'] %>>
      <h1>eXPlain Project Management Tool</h1>
      <% if @flash[:error] %>
      <div id="SystemError"><%= textilize_without_paragraph(@flash[:error])
        %></div>
      <% elsif @flash[:status] %>
      <div id="SystemStatus"><%= textilize_without_paragraph(@flash[:status])
        %></div>
      <% end %>
      <form action="<%= url_for(:controller => 'session',
        :action => 'authenticate') %>" method="post">
                  <table class="form_layout">
                        <tr>
                                <th><label for="Username">Username:</label></th>
                                <td><input type="text" name="username" id="Username" /></td>
                        </tr>
                        <tr>
                                <th><label for="Password">Password:</label></th>
                                <td><input type="password" name="password" id="Password" /></td>
                        </tr>
                        <tr>
                                <td colspan="2" class="form_actions">
                                        <input type="submit" name="submit" value="Log In" />
                                </td>
                        </tr>
                  </table>
      </form>
      <script type="text/javascript">
      <!--
      document.getElementById('Username').focus();
      //-->
      </script>
    </div>
  </body>
</html>


