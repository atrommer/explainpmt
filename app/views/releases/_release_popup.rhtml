<% remote_form_for :release, :url => url, :method => (@release ? :put : :post) do |f| %>
<a href="javascript:void(0);" onclick="cClick();">close</a>
 <h2>Release Information</h2>
  <label>Date</label>
  <%=f.date_select :date%>
  <label>Name</label>
  <%=f.text_field :name%>
  <label>Description</label>
  <%= f.text_area(:description, :cols => 40, :rows => 3) %>
  <%=submit_tag @release ? "Update" : "Create" %>
<% end %>
<div id="flash_notice"></div>