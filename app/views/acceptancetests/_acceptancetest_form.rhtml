<div class="popup">
	<% remote_form_for :acceptancetest, :url => url, :method => (@acceptancetest ? :put : :post) do |f| %>
	  <a href="javascript:void(0);" class="close" onclick="cClick();">close</a>
	  <h2>Acceptance Test Details</h2>
	  <label>Name</label>
	  <%= f.text_area :name, :rows => 2 %>
	  <label>Description</label>
	  <%= f.text_area :description, :rows => 2%>
	  <label>Pre Condition</label>
	  <%= f.text_area :pre_condition, :rows => 2%>
	  <label>Post Condition</label>
	  <%= f.text_area :post_condition, :rows => 2%>
	  <label>Expected Result</label>
	  <%= f.text_area :expected_result, :rows => 2%>
	  <br /><br />
    <fieldset>
	  	<%= f.radio_button :automated, true %>
		  <label for="acceptancetest_automated_true" class="inline">Automated</label>
			<div class="clear"></div>
		  <%= f.radio_button :automated, false %>
		  <label for="acceptancetest_automated_false" class="inline">Manual</label>
			<div class="clear"></div>
		</fieldset>
		<fieldset>
		  <%= f.radio_button :pass, true %>
		  <label for="acceptancetest_pass_true" class="inline">Pass</label>
			<div class="clear"></div>
		  <%= f.radio_button :pass, false %>
		  <label for="acceptancetest_pass_false" class="inline">Fail</label>
		</fieldset>
	  <div class="submit">
	  	<%= submit_tag @acceptancetest ? "Update" : "Create" %>
	  </div>
	<% end %>
	<div id="flash_notice"></div>
</div>
